<?xml version="1.0" encoding="utf-8" ?>
<plugin name="verificationCode">
    <title>Verification Code</title>
    <description>Adds Meta Tags, JS codes from third-party services to the header or footer of the website</description>
    <author>Vladimir</author>
    <owner>Flynax Classifieds Software</owner>
    <version>1.1.0</version>
    <date>08.11.2012</date>
    <controller>verification_code</controller>
    <class>VerificationCode</class>
    <compatible>4.7.2</compatible>

    <files>
        <file>admin/.htaccess</file>
        <file>admin/verification_code.inc.php</file>
        <file>admin/verification_code.tpl</file>
        <file>i18n/ru.json</file>
        <file>.htaccess</file>
        <file>rlVerificationCode.class.php</file>
        <file>tplFooter.tpl</file>
        <file>tplHeader.tpl</file>
    </files>

    <install version="1.1.0"><![CDATA[]]></install>

    <hooks>
        <hook name="tplFooter" version="1.1.0"><![CDATA[]]></hook>
        <hook name="tplHeader" version="1.1.0"><![CDATA[]]></hook>
        <hook name="specialBlock"><![CDATA[
            // Cache content will be generated automatically
        ]]></hook>
        <hook name="apAjaxRequest" version="1.1.0"><![CDATA[]]></hook>
    </hooks>

    <phrases>
        <phrase key="ext_vc_name" module="ext"><![CDATA[Name]]></phrase>
        <phrase key="ext_vc_position" module="ext"><![CDATA[Position]]></phrase>
        <phrase key="ext_vc_manager" module="ext"><![CDATA[Code Manager]]></phrase>
        <phrase key="vc_add_item" module="admin"><![CDATA[Add a Code]]></phrase>
        <phrase key="vc_edit_item" module="admin"><![CDATA[Edit Code]]></phrase>
        <phrase key="verification_code_list" module="admin"><![CDATA[List of Codes]]></phrase>
        <phrase key="vc_name" module="admin"><![CDATA[Name]]></phrase>
        <phrase key="vc_position" module="admin"><![CDATA[Position]]></phrase>
        <phrase key="vc_content" module="admin"><![CDATA[JS script / META tag]]></phrase>
        <phrase key="vc_item_added" module="admin"><![CDATA[The Item has been successfully added]]></phrase>
        <phrase key="vc_item_edited" module="admin"><![CDATA[The Item has been successfully edited]]></phrase>
        <phrase key="vc_position_footer" module="admin"><![CDATA[Footer]]></phrase>
        <phrase key="vc_position_header" module="admin"><![CDATA[Header]]></phrase>
    </phrases>

    <updates>
        <update version="1.0.1" files=""><![CDATA[]]></update>
        <update version="1.0.2" files="admin/verification_code.tpl,rlVerificationCode.class.php"><![CDATA[]]></update>
        <update version="1.0.3" files=".htaccess,admin/.htaccess,admin/verification_code.inc.php,admin/verification_code.tpl,rlVerificationCode.class.php,tplFooter.tpl,tplHeader.tpl"><![CDATA[]]></update>
        <update version="1.1.0" files="admin/verification_code.inc.php,admin/verification_code.tpl,rlVerificationCode.class.php,i18n/ru.json"><![CDATA[]]></update>
    </updates>

    <uninstall version="1.1.0"><![CDATA[]]></uninstall>
</plugin>
