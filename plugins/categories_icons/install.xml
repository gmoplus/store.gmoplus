    <phrases>
        <phrase version="3.0.0" key="category_icon_notice" module="admin"><![CDATA[The icon will be resized relative to the following sizes: <b>{width}px</b>/<b>{height}px</b>, click [here] to edit sizes.]]></phrase>
        <phrase version="2.2.2" key="category_icon_icon_deleted" module="admin"><![CDATA[Category icon has been successfully deleted.]]></phrase>
        <phrase version="2.2.2" key="category_icon" module="admin"><![CDATA[Icon]]></phrase>
        <phrase version="2.2.2" key="current_icon" module="admin"><![CDATA[Current Icon]]></phrase>
