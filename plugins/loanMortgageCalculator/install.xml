    <configs key="loanMortgage" name="Loan/Mortgage">
        <![CDATA[]]>
        <config version="3.1.2" key="loanMortgage_mode" name="Appearance" type="select" values="box,tab"><![CDATA[tab]]></config>
        <config version="3.1.2" key="loanMortgage_loan_divider" name="Loan Form Settings" type="divider"><![CDATA[]]></config>
        <config version="3.1.2" key="loanMortgage_loan_term_mode" name="Estimate loan term in" type="select" values="years,months"><![CDATA[years]]></config>
        <config key="loanMortgage_loan_term" name="Default loan term" validate="int" description="years/months" type="text"><![CDATA[12]]></config>
        <config version="3.1.2" key="loanMortgage_loan_rate" name="Default interest rate" validate="varchar" description="%" type="text"><![CDATA[10]]></config>
    </configs>
    
