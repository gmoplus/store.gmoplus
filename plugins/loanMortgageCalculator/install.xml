        <phrase version="3.1.2" key="config+option+loanMortgage_loan_term_mode_years" module="admin" target="settings"><![CDATA[Years]]></phrase>
        <phrase version="3.1.2" key="config+option+loanMortgage_loan_term_mode_months" module="admin" target="settings"><![CDATA[Months]]></phrase>
    </phrases>
    
    <pages>
        <page version="2.2.0" key="loanMortgage_print" readonly="1" name="Print Loan/Mortgage Schedule" type="system" path="print-loan-schedule" controller="print" login="0" tpl="0"><![CDATA[]]></page>
