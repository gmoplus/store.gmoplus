<?xml version="1.0" encoding="utf-8" ?>
<plugin name="polls">
    <title>Polls</title>
    <description>Allow to create polls blocks in Front End</description>
    <author>Viktor S.</author>
    <owner>Flynax Classifieds Software</owner>
    <version>3.0.1</version>
    <date>01.06.2012</date>
    <class>Polls</class>
    <controller>polls</controller>
    <compatible>4.8.2</compatible>

    <files>
        <file>admin/.htaccess</file>
        <file>admin/polls.inc.php</file>
        <file>admin/polls.tpl</file>
        <file>i18n/ru.json</file>
        <file>static/.htaccess</file>
        <file>static/polls.css</file>
        <file>static/select.png</file>
        <file>footer.tpl</file>
        <file>polls.block.tpl</file>
        <file>results.tpl</file>
        <file>rlPolls.class.php</file>
    </files>

    <install><![CDATA[]]></install>

    <hooks>
        <hook name="tplFooter" version="3.0.1"><![CDATA[]]></hook>
        <hook name="ajaxRequest" version="3.0.1"><![CDATA[]]></hook>
        <hook name="apTplHeader" version="3.0.1"><![CDATA[]]></hook>
        <hook name="apAjaxRequest" version="3.0.1"><![CDATA[]]></hook>
    </hooks>

    <phrases>
        <phrase key="total_votes" module="common"><![CDATA[Total votes]]></phrase>
        <phrase key="polls_not_created" module="system" version="3.0.1"><![CDATA[Polls not created]]></phrase>
        <phrase key="vote" module="frontEnd"><![CDATA[Vote]]></phrase>
        <phrase key="notice_vote_accepted" module="system" version="3.0.1"><![CDATA[Your vote has been accepted, thank you for participation.]]></phrase>
        <phrase key="vote_items" module="admin" target="polls" version="3.0.1"><![CDATA[Vote items]]></phrase>
        <phrase key="ext_results" module="admin" js="1" version="3.0.1"><![CDATA[Results]]></phrase>
        <phrase key="votes" module="common"><![CDATA[Votes]]></phrase>
        <phrase key="polls_view_results" module="common"><![CDATA[View results]]></phrase>
        <phrase key="polls_back_for_vote" module="frontEnd" version="3.0.1"><![CDATA[Back for vote]]></phrase>
        <phrase key="polls_use_create_in_own" module="admin" target="polls" version="3.0.1"><![CDATA[Create in own box]]></phrase>
        <phrase key="ext_polls_use_create_in_own" module="admin" target="polls" js="1" version="3.0.1"><![CDATA[In own box]]></phrase>
        <phrase key="ext_polls_manager" module="admin" target="polls" js="1" version="3.0.1"><![CDATA[Polls manager]]></phrase>
        <phrase key="ext_notice_delete_poll" module="admin" target="polls" js="1" version="3.0.1"><![CDATA[Are you sure you want to delete the poll?]]></phrase>
    </phrases>

    <blocks>
        <block key="polls" login="0" name="Polls" side="left" type="php" tpl="1"><![CDATA[
            global $rlSmarty;
            $poll = "";
            $rlSmarty->assign("poll", $poll);
            $rlSmarty->display(RL_PLUGINS . "polls" . RL_DS . "polls.block.tpl");
        ]]></block>
    </blocks>

    <updates>
        <update version="2.1.0" files="polls.block.tpl"><![CDATA[]]></update>
        <update version="2.1.1" files="admin/polls.inc.php,rlPolls.class.php"><![CDATA[]]></update>
        <update version="2.1.2" files="admin/polls.inc.php,rlPolls.class.php"><![CDATA[]]></update>
        <update version="2.1.3" files="rlPolls.class.php"><![CDATA[]]></update>
        <update version="2.1.4"><![CDATA[]]></update>
        <update version="2.1.5"><![CDATA[]]></update>
        <update version="2.1.6" files="rlPolls.class.php,admin/polls.inc.php"><![CDATA[]]></update>
        <update version="3.0.0" files="rlPolls.class.php,polls.block.tpl,results.tpl,footer.tpl"><![CDATA[]]></update>
        <update version="3.0.1" files="admin/polls.inc.php,admin/polls.tpl,footer.tpl,polls.block.tpl,rlPolls.class.php,static/polls.css,i18n/ru.json,results.tpl"><![CDATA[]]></update>
    </updates>

    <uninstall><![CDATA[]]></uninstall>
</plugin>
