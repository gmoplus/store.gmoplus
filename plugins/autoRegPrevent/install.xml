<?xml version="1.0" encoding="utf-8" ?>
<plugin name="autoRegPrevent">
<title>Spam prevention</title>
<description>Prevents spam by checking user IPs and email addresses against spam blacklists</description>
<author>Alex</author>
<owner>Flynax Classifieds Software</owner>
<version>2.1.3</version>
<date>05.10.2011</date>
<controller>auto_reg_prevent</controller>
<class>AutoRegPrevent</class>
<compatible>4.6.0</compatible>

<files>
    <file>admin/.htaccess</file>
    <file>admin/auto_reg_prevent.inc.php</file>
    <file>admin/auto_reg_prevent.tpl</file>
    <file>i18n/ru.json</file>
    <file>.htaccess</file>
    <file>rlAutoRegPrevent.class.php</file>
</files>

<install version="2.1.2"><![CDATA[]]></install>

<hooks>
    <hook version="2.1.2" name="phpAjaxValidateProfile"><![CDATA[]]></hook>
    <hook version="2.1.2" name="phpAjaxEmailExist"><![CDATA[]]></hook>
    <hook version="2.1.2" name="phpAddListingQuickRegistrationValidate"><![CDATA[]]></hook>
    <hook version="2.1.2" name="apAjaxRequest"><![CDATA[]]></hook>
</hooks>

<configs key="autoRegPrevent" name="Spam prevention"><![CDATA[]]>
    <config key="autoRegPrevent_check_divider" name="Check against spam blacklist" type="divider"><![CDATA[0]]></config>
    <config key="autoRegPrevent_check_username" name="Username" type="bool"><![CDATA[0]]></config>
    <config key="autoRegPrevent_check_email" name="Email" type="bool"><![CDATA[1]]></config>
    <config key="autoRegPrevent_check_ip" name="IP" type="bool"><![CDATA[1]]></config>
</configs>

<phrases>
    <phrase key="autoRegPrevent_detected" module="frontEnd" version="2.1.3"><![CDATA[We are sorry but you are not allowed to sign up because your IP or email address is blacklisted for spam. If you were blacklisted by mistake, please [contact] the Administrator.]]></phrase>
    <phrase key="autoRegPrevent_ext_manager" module="ext" version="2.1.3"><![CDATA[Manager]]></phrase>
    <phrase key="autoRegPrevent_ext_reason" module="ext" version="2.1.3"><![CDATA[Reason for blocking]]></phrase>
    <phrase key="autoRegPrevent_ext_date_reg" module="ext" version="2.1.3"><![CDATA[Registration date]]></phrase>
    <phrase key="autoRegPrevent_status_block" module="admin" version="2.1.3"><![CDATA[Blocked]]></phrase>
    <phrase key="autoRegPrevent_status_unblock" module="admin" version="2.1.3"><![CDATA[Unblocked]]></phrase>
    <phrase key="autoRegPrevent_ext_ip" module="admin" version="2.1.3"><![CDATA[IP address]]></phrase>
    <phrase key="autoRegPrevent_adminAdded" module="admin" version="2.1.3"><![CDATA[Added by the Administrator]]></phrase>
    <phrase key="autoRegPrevent_addItem" module="admin" version="2.1.3"><![CDATA[Add to spam list]]></phrase>
    <phrase key="autoRegPrevent_fillOutNotice" module="ext" version="2.1.3"><![CDATA[Fill at least in one of the fields]]></phrase>
    <phrase key="autoRegPrevent_invalidIp" module="ext" version="2.1.3"><![CDATA[Invalid IP; please enter a valid one.]]></phrase>
</phrases>

<updates>
    <update version="2.0.1"><![CDATA[]]></update>
    <update version="2.1.0"><![CDATA[]]></update>
    <update version="2.1.1"><![CDATA[]]></update>
    <update version="2.1.2" files="admin/auto_reg_prevent.inc.php,admin/auto_reg_prevent.tpl,rlAutoRegPrevent.class.php,.htaccess,admin/.htaccess"><![CDATA[]]></update>
    <update version="2.1.3" files="rlAutoRegPrevent.class.php,i18n/ru.json,admin/auto_reg_prevent.inc.php,admin/auto_reg_prevent.tpl"><![CDATA[]]></update>
</updates>

<uninstall version="2.1.2"><![CDATA[]]></uninstall>
</plugin>
